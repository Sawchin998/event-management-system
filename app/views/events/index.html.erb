<%= link_to "Back to Dashboard", root_path %>
<br>
<div>
  <%= link_to "Create New Event", new_event_path %>
</div>
<div class="scroll-container">
  <h1>Your Events</h1>
  <% current_user.created_events.each do |event| %>
    <h3><strong>title:</strong> <%= event.title %></h3>
    <p><strong>Date:</strong> <%= event.date %></p>
    <p><strong>Location:</strong> <%= event.location %></p>
    <p><strong>Category:</strong> <%= event.category %></p>
    <p><strong>Description:</strong> <%= event.description %></p>
    <p>
      <strong>Attendees:</strong>
      <% event.users.each do |user| %>
        <p><%= "Name: #{user.name}  -----   Email: #{user.email} "%></p>
      <% end %>
    </p>
    <%= link_to "Edit Event", edit_event_path(event.id) %>
    <%= link_to "Delete Event", event_path(event.id), data: { turbo_method: :delete} %>
    <p>-------------------------------------------</p>
  <% end %>
</div>

